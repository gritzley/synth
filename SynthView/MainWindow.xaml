            <Slider Minimum="0" Maximum="135" Name="slValue" Value="{Binding Pitch}">
                <dxmvvm:Interaction.Behaviors>
                    <dxmvvm:EventToCommand EventName="ValueChanged" Command="" />
                </dxmvvm:Interaction.Behaviors>
            </Slider>
        </DockPanel>-->
